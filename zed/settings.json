{
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "file_types": {
    "C++": ["i"],
    "Dockerfile": ["Dockerfile"]
  },
  "use_system_path_prompts": false,
  "agent": {
    "use_modifier_to_send": true,
    "default_profile": "write",
    "profiles": {
      "write-and-ask": {
        "name": "WriteAndAsk",
        "tools": {
          "thinking": true,
          "terminal": true,
          "read_file": true,
          "open": true,
          "now": true,
          "move_path": true,
          "list_directory": true,
          "grep": true,
          "find_path": true,
          "fetch": true,
          "edit_file": true,
          "diagnostics": true,
          "delete_path": true,
          "create_directory": true,
          "copy_path": true
        },
        "enable_all_context_servers": false,
        "context_servers": {}
      }
    },
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    }
  },
  "pane_split_direction_vertical": "right",
  "pane_split_direction_horizontal": "down",
  "theme": "One Dark",
  // "server_url": "https://127.0.0.1:389",
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": true
  },
  "relative_line_numbers": false,
  "cursor_blink": false,
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "inlay_hints": {
    "enabled": true
  },
  "file_scan_exclusions": [
    "**/*.min.js",
    "__pycache__",
    ".git",
    ".venv",
    ".mypy_cache",
    ".pytest_cache",
    ".ruff_cache"
  ],
  "ui_font_family": "Roboto", // Alternatives: "Lato"
  "ui_font_size": 12.0,
  "buffer_font_size": 12.0,
  "agent_font_size": 14.0,
  "buffer_font_family": "FiraCode Nerd Font",
  "tabs": {
    "file_icons": true,
    "git_status": false
  },
  "autosave": "on_focus_change",
  "use_autoclose": false,
  "languages": {
    "Python": {
      "language_servers": ["basedpyright", "!pyright"]
    },
    "Markdown": {
      "format_on_save": "off",
      "remove_trailing_whitespace_on_save": false
    },
    "YAML": {
      "format_on_save": "off",
      "remove_trailing_whitespace_on_save": false
    },
    "JSON": {
      "format_on_save": "off",
      "remove_trailing_whitespace_on_save": false
    },
    "TOML": {
      "format_on_save": "off",
      "remove_trailing_whitespace_on_save": false
    }
  },
  "lsp": {
    "clangd": {
      "binary": {
        "path": "/usr/bin/clangd-18",
        "arguments": []
      }
    },
    "basedpyright": {
      "settings": {
        "basedpyright.disableOrganizeImports": true,
        "basedpyright.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "standard"
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  },
  "journal": {
    "hour_format": "hour24"
  },
  "preview_tabs": {
    "enabled": true
  },
  "search": {
    "case_sensitive": false,
    "regex": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "font_family": "FiraCode Nerd Font Mono",
    "copy_on_select": true,
    "line_height": "standard",
    "detect_venv": "off",
    "shell": "system",
    "env": {
      "EDITOR": "zed --wait",
      "TERM": "xterm-256color"
    }
  },
  "file_finder": {
    "file_icons": true,
    "modal_max_width": "large"
  },
  // "unstable.ui_density": "compact",
  "git_panel": {
    // Whether to show the git panel button in the status bar.
    "button": true,
    // Where to the git panel. Can be 'left' or 'right'.
    "dock": "left",
    // Default width of the git panel.
    "default_width": 360,
    // Style of the git status indicator in the panel.
    //
    // Default: icon
    "status_style": "icon",
    "scrollbar": {
      // When to show the scrollbar in the git panel.
      //
      // Default: inherits editor scrollbar settings
      "show": null
    },
    "collapse_untracked_diff": true
  }
}
