{
    // updates of vscode via Ubuntu package manager
    "update.channel": "none",

    // Workaround for issue vscode/23991
    // to make "caps lock as additional ESC" work
    "keyboard.dispatch": "keyCode",
    "editor.autoClosingBrackets": false,

    // vertical ruler at 80 columns
    "editor.rulers": [80],

    "files.autoSave": "onFocusChange",

    "vim.leader": "<space>",
    "vim.textwidth": 80,
    "vim.easymotion": true,
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/bin/nvim",

    // * <leader>w saves current file
    // * <leader>b saves all files and runs `cargo build`
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": ["leader", "w"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "b"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.saveAll",
                    "args": []
                },
                {
                    "command": "workbench.action.terminal.clear",
                    "args": []
                },
                {
                    "command": "rust.cargo.build.default",
                    "args": []
                },
                {
                    "command": "workbench.action.terminal.scrollToTop",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "t"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.saveAll",
                    "args": []
                },
                {
                    "command": "rust.cargo.test.default",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "c"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.saveAll",
                    "args": []
                },
                {
                    "command": "rust.cargo.check.default",
                    "args": []
                }
            ]
        }
    ],

    "rust.rls": {
        "executable": "rustup",
        "args": ["run", "nightly", "rls"]
    },

    "python.linting.enabled": false,
    "python.pythonPath": "/usr/bin/python3",
    "vim.disableAnnoyingNeovimMessage": true
}
